{
  "name": "yahoo-mail-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for Yahoo Mail integration (emails and calendars)",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "get-credentials": "tsx scripts/get-credentials.ts",
    "oauth-flow": "tsx scripts/oauth-flow.ts",
    "test-connection": "tsx scripts/test-connection.ts",
    "test-creds": "node test-credentials.js",
    "check-connection": "node scripts/check-connection.js",
    "docker:build": "docker build -t yahoo-mail-mcp:latest .",
    "docker:run": "docker run -d --name yahoo-mail-mcp --env-file .env -p 3000:3000 yahoo-mail-mcp:latest",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "yahoo-mail",
    "imap",
    "caldav",
    "email",
    "calendar"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.2",
    "dav": "^1.8.0",
    "dotenv": "^16.6.1",
    "imap": "^0.8.19",
    "mailparser": "^3.6.5",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "@types/imap": "^0.8.40",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
